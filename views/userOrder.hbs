                                                <div><p>Địa chỉ: {{this.info.userAddress}}</p></div>
                                            </div>
                                            <div class="col-sm-8 col-xs-12">
                                                <div class=" row">
                                                    <div class="col-4 ">Tên sách</div>
                                                    <div class="col-2 text-center">Đơn giá</div>
                                                    <div class="col-2 text-center">Số lượng</div>
                                                    <div class="col-2 text-center">Thành tiền</div>
                                                </div>
                                                <div class="product__deatils__tab mtb--10"></div>
                                                {{#each this.cart.items as |item|}}
                                                    <div class="row">
                                                        <div class="col-4">{{item.item.bookName}}</div>
                                                        <div class="col-2 text-center">{{item.item.price}} đ</div>
                                                        <div class="col-2 text-center">x {{item.qty}}</div>
                                                        <div class="col-2 text-center">{{item.price}} đ</div>
                                                    </div>

                                                {{/each}}
                                            </div>

                                        </div>
                                        <div class="product__deatils__tab mt--10 mb--20"></div>
                                    </div>
                                {{/each}}
                            {{else}}
                                <div class="container text-center">Không có đơn hàng đang vận chuyển</div>
                            {{/if}}
                        </div>
                    </div>
                    <!-- End Single Content -->
                    <!-- Start Single Content -->
                    <div role="tabpanel" id="reviews" class="product__tab__content fade">
                        <div class="product__description__wrap">
                            {{#if orderDelivered}}
                                {{#each orderDelivered}}
                                    <div class="product__desc">
                                        <div class="container row">
                                            <h2 class="title__5">MÃ ĐƠN   : {{this._id}}</h2>
                                            <h2 class="title__5">TỔNG TIỀN : {{this.cart.totalPrice}} đ</h2>
                                            <div class=" col-sm-4 col-xs-12 mb--10">
