<!-- cart-main-area start -->
<div class="cart-main-area ptb--120 bg__white">
    <div class="container">
        <div class="row">
            {{#if books}}
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <form action="#">
                        <div class="table-content table-responsive">
                            <table>
                                <thead>
                                <tr>
                                    <th class="product-thumbnail">Hình ảnh</th>
                                    <th class="product-name">Sản phẩm</th>
                                    <th class="product-price">Đơn giá</th>
                                    <th class="product-quantity">Số lượng</th>
                                    <th class="product-subtotal">Thành tiền</th>
                                    <th class="product-remove">Xóa</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each books}}
                                <tr>
                                    <td class="product-thumbnail"><a href="#"><img src="{{this.item.bookImage}}" alt="product img" /></a></td>
                                    <td class="product-name"><a href="#">{{this.item.bookName}}</a></td>
                                    <td class="product-price"><span class="amount">{{this.item.price}}</span></td>
                                    <td class="product-quantity"><input type="number" min="1" value="{{this.qty}}" /></td>
                                    <td class="product-subtotal">{{this.price}}</td>
                                    <td class="product-remove"><a href="#">X</a></td>
                                </tr>
                                {{/each}}
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-sm-7 col-xs-12">
                                <div class="buttons-cart">
                                    <input type="submit" value="Update Cart" />
                                    <a href="/store">Tiếp tục mua hàng</a>
                                </div>

                            </div>
                            <div class="col-md-4 col-sm-5 col-xs-12">
                                <div class="cart_totals">
                                    <h2>Thanh toán</h2>
                                    <table>
                                        <tbody>
                                        <tr class="cart-subtotal">
                                            <th>Tổng tiền</th>
                                            <td><span class="amount">{{totalPrice}}</span></td>
                                        </tr>
                                        <tr class="shipping">
                                            <th>Vận chuyển</th>
                                            <td>
                                                <ul id="shipping_method">

                                                    <li>
                                                        <input type="radio" />
                                                        <label>
                                                            Free Shipping
                                                        </label>
                                                    </li>

                                                </ul>
                                                <p><a class="shipping-calculator-button" href="#">Phí vận chuyển</a></p>
                                            </td>
                                        </tr>
                                        <tr class="order-total">
                                            <th>Thành tiền</th>
                                            <td>
                                                <strong><span class="amount">{{totalPrice}}</span></strong>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <div class="wc-proceed-to-checkout">
                                        <a href="#">Tiến hành Đặt hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            {{else}}
                <h1>Giỏ hàng trống</h1>
            {{/if}}

        </div>
    </div>
</div>
<!-- cart-main-area end -->